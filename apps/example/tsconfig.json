{
  "extends": "@monorepo-template/tsconfig/react.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "paths": {
      "@/*": ["./src/*"],
      "@/types/*": ["./types/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next"]
}
